# =============================================================================
# Mineguard Backend Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Anthropic API Key - Get from https://console.anthropic.com/
# This is REQUIRED for AI functionality
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (default: 3001)
PORT=3001

# Environment mode (development, production, test)
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database file path
DATABASE_PATH=./data/app.db

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# Mock AI mode - Set to "1" for testing without API costs
# When enabled, AI responses are mocked and no API calls are made
MOCK_AI=0

# AI Models for different tasks
AI_SUMMARY_MODEL=claude-3-haiku-20240307
AI_QA_MODEL=claude-3-haiku-20240307
AI_SYNTHESIS_MODEL=claude-3-5-sonnet-latest

# Token limits for AI processing
MAX_DOCUMENT_TOKENS=6000
MAX_CHUNK_TOKENS=2800
OVERLAP_TOKENS=300
MAX_QA_TOKENS=1800

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Directory to store uploaded files
UPLOAD_DIR=./uploads

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================

# Rate limiting window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window (default: 10000)
RATE_LIMIT_MAX_REQUESTS=10000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Frontend URL for CORS (should match your frontend development server)
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================

# For development:
# 1. Set MOCK_AI=1 to test without API costs
# 2. Ensure CORS_ORIGIN matches your frontend URL
# 3. Database will be created automatically on first run
# 4. Uploads directory will be created automatically

# For production:
# 1. Set NODE_ENV=production
# 2. Use a strong, unique ANTHROPIC_API_KEY
# 3. Set appropriate rate limits
# 4. Configure proper CORS_ORIGIN for your domain
# 5. Consider using a production database (PostgreSQL, MySQL)
